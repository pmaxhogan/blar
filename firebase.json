{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/shorten",
        "function": "shortenUrl"
      },
      {
        "source": "/!(shorten)",
        "function": "render"
      },
      {
        "source": "/!(shorten)/*",
        "function": "render"
      },
      {
        "source": "/!(shorten)/**",
        "function": "render"
      }
    ],
    "redirects": [
      {
        "source": "/shorten/**",
        "destination": "/",
        "type": 301
      }
    ]
  }
}
